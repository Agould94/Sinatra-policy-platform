<h1><%=@user.username%>'s profile</h1>
<%if @user == current_user%>
    <% if @user.biography %>
        <h2><%= @user.username %>'s Bio:</h2>
        <p><%= @user.biography %></p>
        <p><a href="/users/<%=@user.id%>/edit">Update your biography!</a></p>
    <% else %>
        <a href="/users/<%=@user.id%>/edit"><h2>Update your biography!</h2></a>
    <% end %>
<%else%>
    <%if @user.biography%>
        <h2><%= @user.username %>'s Bio:</h2>
        <p><%= @user.biography %></p>
    <%else%>
        <p><%= @user.username %> has not added a biography yet</p>
    <% end %>
<%end%>
    